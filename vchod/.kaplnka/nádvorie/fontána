#!/bin/bash
#
# Ak toto čítaš, zatúlal si sa za hranice
# a čítaš kód, ktorý riadi hru.
#
# Gratulujem!
#
# Učenie sa Linuxu je o zvedavosti, takže si prečítaj tento kód a uvidíš
# či vieš prísť na to, čo to robí.
#
# Keď si pripravený pokračovať v hre, drž sa
# zvitkov. Ak si uviazol, prejdi na Gitlab a vytvor problém (`Issue`).
# Rád ti poskytnem nápovedu.
#
damage() {
    cat << EOF
You try to resist, but you cannot.  You dip your hand into
the fountain,  and you feel your skin burning.  The pain
snaps you out of your trance and you only suffer -2 HP.

Remember to deduct 2 points from your HP variable:

let "HP=HP-2"

EOF

}

CURSE=`find .. -type f -name ".curse"`

printf "Chcete sa priblížiť k fontáne? a/n "
read RESP

if [ "$RESP" = "a" -o "$RESP" = "A" ]; then
    cat << EOF
The waters sparkle in the light of your gaze.  You feel
drawn to it.

EOF
    if [ x$CURSE = "x" ]; then
        cat << EOF
But you suddenly feel strength to turn away.  You hear a
sigh from the altar in the chapel.

EOF
   else
       damage
   fi
else
    if [ ! -z "$CURSE" ]; then
	damage
    fi
fi

[ -f ../.curse ] && rm ../.curse
